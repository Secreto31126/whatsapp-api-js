{
    "include": ["src/**/*"],
    "exclude": ["src/standalone.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "Preserve",
        "moduleResolution": "Bundler",
        "outDir": "lib/types",
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
