{
    "include": ["src/**/*"],
    "exclude": ["src/standalone.ts"],
    "compilerOptions": {
        "lib": ["ESNext"],
        "outDir": "lib/types",
        "types": ["node", "undici"],
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
